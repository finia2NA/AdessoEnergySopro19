pipeline{
    agent any

    tools{nodejs "node"}

    stages{
        stage('configureInstall') {
            steps {
                sh 'cd /home/jenkins/web/'
                sh 'npm ci'
            }
        }
        stage('test') {
            steps {
                sh 'cd /home/jenkins/web/'
                sh 'npm test:coverage'
            }
        }
    }
}