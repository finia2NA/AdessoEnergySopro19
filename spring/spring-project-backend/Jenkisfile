pipeline {
	agent any
	tools {
		maven 'maven-3.6.1'
		jdk 'jdk-8u222'
	}
	stages {
		stage ('Check ENV') {
			steps {
				sh "mvn -v"
				sh "java -version"
			}
		}
		stage ('Test project') {
			steps {
				sh "mvn test"
			}
		}
		stage ('Build project') {
			steps {
				sh "mvn package"
			}
		}
	}
}